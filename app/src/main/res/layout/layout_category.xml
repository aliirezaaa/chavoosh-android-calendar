<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_name"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/md_dark_text_87" />

    <LinearLayout
        android:id="@+id/category_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_learning"
            style="@style/CategoryIndicator" />

        <ImageView
            android:id="@+id/category_wellness"
            style="@style/CategoryIndicator" />


        <ImageView
            android:id="@+id/category_personal"
            style="@style/CategoryIndicator" />

        <ImageView
            android:id="@+id/category_work"
            style="@style/CategoryIndicator" />


        <ImageView
            android:id="@+id/category_fun"
            style="@style/CategoryIndicator" />


        <ImageView
            android:id="@+id/category_chores"
            style="@style/CategoryIndicator"
            android:layout_marginEnd="0dp" />
    </LinearLayout>

</LinearLayout>