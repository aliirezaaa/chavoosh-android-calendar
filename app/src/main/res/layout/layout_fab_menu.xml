<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/fab_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_light_text_87"
        android:paddingBottom="72dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/fab_quick_add_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/fab_quick_add_quest"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/fab_quick_add_quest"
            android:background="@drawable/fab_mini_label_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/fab_quick_add" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_quick_add_quest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab_add_reward"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_flash_on_white_24dp"
            android:visibility="invisible"
            app:backgroundTint="@color/colorAccent"
            app:elevation="6dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

        <TextView
            android:id="@+id/fab_reward_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/fab_add_reward"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/fab_add_reward"
            android:background="@drawable/fab_mini_label_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/fab_reward" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab_add_challenge"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_gift_white_24dp"
            android:visibility="invisible"
            app:backgroundTint="@color/colorAccent"
            app:elevation="6dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

        <TextView
            android:id="@+id/fab_challenge_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/fab_add_challenge"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/fab_add_challenge"
            android:background="@drawable/fab_mini_label_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/fab_challenge" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab_add_repeating_quest"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_sword_white_24dp"
            android:visibility="invisible"
            app:backgroundTint="@color/colorAccent"
            app:elevation="6dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

        <TextView
            android:id="@+id/fab_repeating_quest_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/fab_add_repeating_quest"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/fab_add_repeating_quest"
            android:background="@drawable/fab_mini_label_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/fab_repeating_quest" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_repeating_quest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_repeat_white_24dp"
            android:visibility="invisible"
            app:backgroundTint="@color/colorAccent"
            app:elevation="6dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fab_quest_label"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/fab_normal_label_background"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="@string/fab_quest"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorAccent"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

</FrameLayout>
