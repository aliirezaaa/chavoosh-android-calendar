<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            style="@style/ChallengeTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/add_challenge_result1_hint"
            android:paddingTop="8dp"
            app:hintTextAppearance="@style/TextAppearance.iPoli.Challenge.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/new_challenge_result1"
                style="@style/ChallengeWhiteEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text">

                <requestFocus />

            </android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/ChallengeTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/add_challenge_result2_hint"
            android:paddingTop="8dp"
            app:hintTextAppearance="@style/TextAppearance.iPoli.Challenge.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/new_challenge_result2"
                style="@style/ChallengeWhiteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/ChallengeTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:hint="@string/add_challenge_result3_hint"
            android:paddingTop="8dp"
            app:hintTextAppearance="@style/TextAppearance.iPoli.Challenge.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/new_challenge_result3"
                style="@style/ChallengeWhiteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/new_challenge_results_image"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:scaleType="fitEnd"
        android:src="@drawable/new_personal_quest" />
</RelativeLayout>