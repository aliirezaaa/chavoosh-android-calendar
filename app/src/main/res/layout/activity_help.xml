<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.ipoli.android.app.settings.HelpActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.iPoli.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.iPoli.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="?attr/actionBarSize"
            android:weightSum="1">
            <TextView
                android:id="@+id/about_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingTop="75dp"
                android:text="@string/about_subject"
                android:textColor="@color/com_facebook_blue"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/img_sub_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/sec1txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"

                android:text="@string/mini_sec1"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_sec1"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                />

            <TextView
                android:id="@+id/sec2txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/mini_sec2"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_sec2"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                />

            <TextView
                android:id="@+id/sec3txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/mini_sec3"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_sec3"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:layout_weight="0.23"
                />

            <TextView
                android:id="@+id/sec4txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/mini_sec4"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_sec4"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                 />

            <TextView
                android:id="@+id/sec4_1txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/mini_sec5"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_sec5"
                android:layout_width="match_parent"
                android:layout_height="276dp"
               />

            <TextView
                android:id="@+id/sec5txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/mini_sec7"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sec6txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/mini_sec8"
                android:textColor="@color/com_facebook_blue"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
